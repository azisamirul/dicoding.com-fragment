<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="azisamirul.samplefragmentusage.SecondFragment">

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/txt_second_fragment"
     android:text="Hola ini second fragment"
     android:layout_marginBottom="8dp"
     android:layout_centerVertical="true"
     android:layout_centerHorizontal="true"
     android:gravity="center"
     />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_second_fragment"
    android:text="Ke Third Fragment"
    android:layout_below="@+id/txt_second_fragment"
    android:layout_centerHorizontal="true" />
</RelativeLayout>
